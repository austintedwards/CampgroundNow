<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>HANGMAN FUNCTIONS</title>
  </head>
  <body>
    <h1> Hangman</h1>
    <script>
    var word = function(){
var randomWords = ['colorado', 'below', 'cleveland', 'baseball', 'football', 'professional', 'vacation', 'school', 'family', 'love', 'apple', 'basement', 'crunch', 'danger', 'elephant', 'frighten', 'grateful', 'heathly', 'icicle', 'joker', 'kangaroo', 'lately', 'mountain', 'north', 'ostrich', 'parking', 'quiet', 'racer', 'standing', 'tomorrow', 'umbrella', 'working', 'viking', 'zebra' ];
return word = randomWords[Math.floor(Math.random()*randomWords.length)];
};

var answer = function(word){
answer = [];

  for (var i=0; i< word.length; i++){
  answer[i]="_";
  }
return answer;
};



var showProgess = function(answer){
alert(answer.join(" "));
};


var getGuess=function(){
guess = prompt("Please guess a letter or click cancel to stop playing");
return guess;
};


var game = function(guess,word,answer){
    var garbage=[];
    var addGarbage=0;
  for(var j = 0; j<word.length; j++){
    if(answer[j]===guess){
    alert("Letter has already been guessed.  Please select another letter");
    letters++;
    }
    if (word[j]===guess){
      answer[j]=guess;
      letters--;
      addGarbage++;
    }
    if (addGarbage===0){
    garbage.push(guess);
      if(garbage.length>8){
      alert("You ran out of guesses");
      alert("The word was "+word);
      break;
      }
    }

  }

};

var congratulate = function(answer){
if(letters===0){
  alert("Great job!!! The word was "+word);
}
};

word();
answer(word);
var letters = word.length;

while (letters>0){
showProgess(answer);
getGuess();
if (guess===null){
  break;
}else if(guess.length !==1){
  alert("Please input a single letter.");
}else{
  game(guess,word,answer);
}

}
congratulate(answer);

    </script>

  </body>
</html>
