<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>HANGMAN</title>
  </head>
  <body>
    <h1> HANGMAN </h1>
    <script>
    var randomWords = ['colorado', 'below', 'cleveland', 'baseball', 'football', 'professional', 'vacation', 'school', 'family', 'love', 'apple', 'basement', 'crunch', 'danger', 'elephant', 'frighten', 'grateful', 'heathly', 'icicle', 'joker', 'kangaroo', 'lately', 'mountain', 'north', 'ostrich', 'parking', 'quiet', 'racer', 'standing', 'tomorrow', 'umbrella', 'working', 'viking', 'zebra' ];
    var pick = function(wo){
    var word = randomWords[Math.floor(Math.random()*randomWords.length)];


    var setArry = function(word){
    var answer = [];
    var garbage=[];
    for (var i=0; i< word.length; i++){
    	answer[i]="_";
    }

    var letters = word.length;
    while (letters>0){
    	var guess = prompt("Please guess a letter or click cancel to stop playing");

    	if (guess===null){
    		alert("You just quit.  The word was "+word);
    		break;

    	}else if (guess.length!==1){
    		alert("Please only 1 letter");
    	}else{
    		var addGarbage=0;
    		for(var j = 0; j<word.length; j++){
    			if(answer[j]===guess){
    			alert("Letter has already been guessed.  Please select another letter");
    			letters++;
    			}
    			if (word[j]===guess){
    				answer[j]=guess;
    				letters--;
    				addGarbage++;

    			}


    		}
    	if (addGarbage===0){
    		garbage.push(guess);
    		if(garbage.length>8){
    			alert("You ran out of guesses");
    			alert("The word was "+word);
    			break;

    		}
    	}
    		alert(answer.join(" "));
    		alert("In the trash: "+garbage.join(""));
    	}

    }
    if(letters===0){
    alert("Great job!!! The word was "+word);
    }
    };
    setArry(word);
    };


    pick(randomWords);   </script>
  </body>
</html>
